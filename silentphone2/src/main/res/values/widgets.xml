    <style name="Widget.Text.Error" />

    <style name="Widget.Text.Error.Resend">
        <item name="android:text">@string/notify_resend_request</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="Widget.OptionsItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/conversation_option_margin_bottom</item>
        <item name="android:filterTouchesWhenObscured">true</item>
        <item name="containerPaddingTop">@dimen/space_large</item>
        <item name="containerPaddingBottom">@dimen/spacing_large</item>
        <item name="checkableMarginLeft">@dimen/conversation_option_checkable_margin_left</item>
        <item name="checkableMarginRight">@dimen/conversation_option_margin_left</item>
        <item name="imageMarginLeft">@dimen/conversation_option_margin_left</item>
        <item name="imageMarginRight">@dimen/conversation_option_image_margin</item>
        <item name="descriptionMarginLeft">@dimen/conversation_option_description_margin_left</item>
        <item name="descriptionMarginTop">@dimen/conversation_option_description_margin_top</item>
        <item name="textSize">@dimen/text_xlarge</item>
        <item name="tintColor">?attr/sp_drawer_text_color</item>
        <item name="android:textColor">?attr/sp_drawer_text_color</item>
        <item name="descriptionSize">@dimen/text_normal</item>
        <item name="descriptionColor">?attr/sp_drawer_secondary_text_color</item>
    </style>

    <style name="Widget.MainDrawerOptionsItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:filterTouchesWhenObscured">true</item>
        <item name="android:textColor">?attr/sp_drawer_text_color</item>
        <item name="containerPaddingTop">@dimen/space_large</item>
        <item name="containerPaddingBottom">@dimen/spacing_large</item>
        <item name="checkableMarginLeft">@dimen/conversation_option_checkable_margin_left</item>
        <item name="imageMarginLeft">@dimen/dial_drawer_avatar_padding_left</item>
        <item name="imageMarginRight">@dimen/conversation_option_image_margin</item>
        <item name="descriptionMarginLeft">75dp</item>
        <item name="descriptionMarginTop">0dp</item>
        <item name="textSize">@dimen/text_xlarge</item>
        <item name="tintColor">?attr/sp_drawer_text_color</item>
        <item name="descriptionSize">@dimen/text_normal</item>
        <item name="descriptionColor">?attr/sp_drawer_secondary_text_color</item>
    </style>

    <style name="Widget.SettingsItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?attr/sp_activity_text_selector</item>
        <item name="imageMarginLeft">@dimen/settings_item_margin_left</item>
        <item name="checkableMarginLeft">@dimen/conversation_option_checkable_margin_left</item>
        <item name="checkableMarginRight">@dimen/conversation_option_checkable_margin_right</item>
        <item name="descriptionMarginLeft">@dimen/settings_item_margin_left</item>
        <item name="descriptionMarginRight">@dimen/settings_item_margin_left</item>
        <item name="descriptionMarginTop">0dp</item>
        <item name="textSize">@dimen/text_xlarge</item>
        <item name="descriptionSize">@dimen/text_large</item>
        <item name="descriptionColor">?attr/sp_drawer_secondary_text_color</item>
    </style>

    <style name="Widget.SettingsItem.Inner" parent="Widget.SettingsItem">
        <item name="android:layout_marginLeft">@dimen/spacing_large</item>
        <item name="android:layout_marginStart" tools:ignore="NewApi">@dimen/spacing_large</item>
    </style>

    <style name="Widget.OptionsSeekBar" parent="android:Widget.SeekBar">
        <item name="android:progressDrawable">@drawable/messaging_seeker_progress_horizontal</item>
        <item name="android:indeterminateDrawable">@drawable/messaging_seeker_progress_horizontal</item>
        <item name="android:minHeight">13dip</item>
        <item name="android:maxHeight">13dip</item>
        <item name="android:thumb">@drawable/messaging_seeker_selector</item>
        <item name="android:thumbOffset">16dip</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
        <item name="android:filterTouchesWhenObscured">true</item>
    </style>

    <style name="Widget.ContactInfoItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginTop">@dimen/spacing_large</item>
        <item name="android:layout_marginBottom">@dimen/spacing_large</item>
        <item name="android:filterTouchesWhenObscured">true</item>
        <item name="android:textColor">?attr/sp_drawer_text_color</item>
        <item name="imageMarginLeft">0dp</item>
        <item name="imageMarginRight">14dp</item>
        <item name="descriptionMarginLeft">0dp</item>
        <item name="descriptionMarginTop">0dp</item>
        <item name="textSize">@dimen/text_xlarge</item>
        <!--<item name="android:textAppearance">?android:attr/textAppearanceSmall</item>-->
        <item name="android:textStyle">normal</item>
        <item name="tintColor">?attr/sp_drawer_text_color</item>
        <item name="descriptionSize">@dimen/text_large</item>
        <item name="descriptionColor">?attr/sp_drawer_secondary_text_color</item>
    </style>

    <style name="Widget.Layout.FileUpload" parent="Widget.Silence.ProgressLayout">
        <item name="android:background">?attr/sp_outgoing_message_background</item>
    </style>

    <style name="Widget.Text.FileUpload" parent="Widget.Text.Outgoing"/>
</resources>
